import axios from "axios";

class GasTypesService {
    async getGasTypes() {
        const response = await axios.get("https://jsonplaceholder.typicode.com/gastypes");
        return response.data;
    }

    async getGasType(id) {
        const response = await axios.get(`https://jsonplaceholder.typicode.com/gastypes/${id}`);
        return response.data;
    }

    async deleteGasType(id) {
        await axios.delete(`https://jsonplaceholder.typicode.com/gastypes/${id}`);
        return true;
    }

    async updateGasType(gasType) {
        const response = await axios.put(`https://jsonplaceholder.typicode.com/gastypes/${gasType.id}`, gasType);
        return response.data;
    }
}

module.exports = GasTypesService;